{
  "platformio-ide.toolbar": [
    {
      "text": "$(home)",
      "tooltip": "Home",
      "command": "platformio-ide.showHome"
    },
    {
      "text": "$(trash)",
      "tooltip": "Clean",
      "command": "platformio-ide.clean"
    },
    {
      "text": "$(check)",
      "tooltip": "Build",
      "command": "platformio-ide.build"
    },
    {
      "text": "$(flash)",
      "tooltip": "Upload Firmware",
      "command": [
        {
          "id": "platformio-ide.runPIOCoreCommand",
          "args": "pio run -t nobuild -t upload -e ${command:platformio-ide.activeEnvironment}"
        }
      ]
    },
    {
      "text": "$(zap)",
      "tooltip": "Build and Upload",
      "command": "platformio-ide.upload"
    },
    {
      "text": "$(fire)",
      "tooltip": "Build, Erase and Upload",
      "command": [
        {
          "id": "platformio-ide.runPIOCoreCommand",
          "args": "pio run -t erase -t upload -e ${command:platformio-ide.activeEnvironment}"
        }
      ]
    },
    {
      "text": "$(trashcan)",
      "tooltip": "Erase Flash",
      "command": [
        {
          "id": "platformio-ide.runPIOCoreCommand",
          "args": "pio run -t erase -e ${command:platformio-ide.activeEnvironment}"
        }
      ]
    },
    {
      "text": "$(arrow-right)",
      "tooltip": "Upload and Monitor",
      "command": "platformio-ide.uploadAndMonitor"
    },
    {
      "text": "$(device-desktop)",
      "tooltip": "Serial Monitor",
      "command": "platformio-ide.serialMonitor"
    },
    {
      "text": "$(terminal)",
      "tooltip": "New Terminal",
      "command": "platformio-ide.newTerminal"
    },
    {
      "text": "$(refresh)",
      "tooltip": "Rebuild IntelliSense Index",
      "command": "platformio-ide.rebuildProjectIndex"
    }
  ]
}
